<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ismynr.githubuserlist">

    <permission android:name="com.ismynr.githubuserlist.READ_DATABASE" android:protectionLevel="normal" />
    <permission android:name="com.ismynr.githubuserlist.WRITE_DATABASE" android:protectionLevel="normal" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <provider
            android:name=".provider.FavoriteProvider"
            android:authorities="com.ismynr.githubuserlist"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.ismynr.githubuserlist.READ_DATABASE"
            android:writePermission="com.ismynr.githubuserlist.WRITE_DATABASE"/>

        <activity android:name=".view.FavoriteActivity" />
        <activity android:name=".view.DetailActivity" />
        <activity
            android:name=".view.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity" />
    </application>

</manifest>